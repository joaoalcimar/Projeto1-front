<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.BathroomEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:id="@+id/registrar_ponto_vazao_banheiro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrar_ponto_de_vaz_o"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/nome_vazao_banheiro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:paddingTop="120dp"
            />

        <EditText
            android:id="@+id/ponto_vazao_banheiro_et"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_vazao_banheiro_text"
            />


        <Button
            android:id="@+id/register_new_flow_bathroom_button"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:text="Registrar"
            />





    </RelativeLayout>


</android.support.constraint.ConstraintLayout>