<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".views.EditZoneActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/zonas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Zonas"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:textSize="30sp" />


        <Button
            android:id="@+id/edit_bathroom_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/bathroom_button" />

        <TextView
            android:layout_width="90sp"
            android:layout_height="50sp"
            android:textSize="20sp"
            android:text="Banheiro"
            android:layout_below="@id/edit_bathroom_button"
            android:layout_marginLeft="60dp"
            android:textColor="@color/cardview_dark_background" />

        <Button
            android:id="@+id/edit_kitchen_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="60dp"
            android:layout_below="@id/edit_bathroom_button"
            android:background="@drawable/kitchen_button" />

        <TextView
            android:layout_width="90sp"
            android:layout_height="50sp"
            android:textSize="20sp"
            android:text="Cozinha"
            android:layout_below="@id/edit_kitchen_button"
            android:layout_marginLeft="60dp"
            android:textColor="@color/cardview_dark_background" />

        <Button
            android:id="@+id/edit_garden_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/edit_bathroom_button"
            android:background="@drawable/garden_button"
            />

        <TextView
            android:layout_width="90sp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:text="Jardim"
            android:layout_below="@id/edit_garden_button"
            android:layout_marginLeft="230dp"
            android:textColor="@color/cardview_dark_background" />


        <Button
            android:id="@+id/edit_laundry_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/edit_kitchen_button"
            android:layout_below="@id/edit_garden_button"
            android:background="@drawable/laundry_button"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:text="Lavanderia"
            android:layout_below="@id/edit_laundry_button"
            android:layout_marginLeft="210dp"
            android:textColor="@color/cardview_dark_background" />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>