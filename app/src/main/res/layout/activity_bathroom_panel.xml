<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.BathroomPanelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:id="@+id/lista_pontos_vazao_banheiro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lista_de_pontos_de_vaz_o"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            />


        <ListView
            android:id="@+id/lv_flow_points_bathroom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:layout_below="@id/lista_pontos_vazao_banheiro_text"

            >

        </ListView>





    </RelativeLayout>


</android.support.constraint.ConstraintLayout>