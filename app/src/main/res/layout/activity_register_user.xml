<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layoutContextRegisterUser"
    tools:context=".views.RegisterUserActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="113dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/blue_border">

            <TextView
                android:id="@+id/cadastro_tv"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:textSize="40sp"
                android:text="@string/cadastro" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cadastro_tv"
                android:layout_centerHorizontal="true"
                android:paddingLeft="70dp"
                android:paddingTop="50dp"
                android:text="UsuÃ¡rio"

                />

            <EditText
                android:id="@+id/registerUser_et"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_below="@id/cadastro_tv"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/registerUser_et"
                android:layout_centerHorizontal="true"
                android:paddingLeft="70dp"
                android:paddingTop="20dp"
                android:text="Senha" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/registerUser_et"

                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_et"
                android:layout_centerHorizontal="true"
                android:paddingLeft="70dp"
                android:paddingTop="20dp"
                android:text="Confirme sua senha" />

            <EditText
                android:id="@+id/confirmPassword_et"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/password_et" />

            <Button
                android:id="@+id/registerUser_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmPassword_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/registrar" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>