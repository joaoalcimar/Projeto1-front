<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.UserDataActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:id="@+id/meu_perfil_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meu_perfil"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            />

        <View
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/meu_perfil_text"
            android:minHeight="1dp"

            />

        <Button
            android:id="@+id/residents_list_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/menu_text"
            android:layout_marginTop="150dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/residents_list_icon"
            />

        <Button
            android:id="@+id/user_place_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/residents_list_button"
            android:layout_marginTop="150dp"
            android:background="@drawable/place_icon"
            />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>